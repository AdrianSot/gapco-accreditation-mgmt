<!-- Page content -->
 <div class="w3-container">

   <div class="container-fluid">
     <div class="jumbotron jumbotron-fluid"">
       <div class="container">
         <h1>Bienvenido al sistema de GAPCO</h1>
         <p>Gestión de Acreditación del Programa CONAIC</p>
         <br>
     </div>
   </div>
   </div>


   <div class="container-fluid">
   <p scope="col"><strong>Categorías CONAIC para revisión y seguimiento</strong></p>
     <table class="table table-hover" style="width: 80%;" align="center">
       <thead>
         <tr>
           <!--<th scope="col">
             Categorías CONAIC para revisión y seguimiento
           </th> -->
           <th scope="col"></th>
           <th scope="col"></th>
           <th scope="col" style="opacity: 0.5;">Responsable de área</th>
           <th scope="col"></th>
           <th scope="col"></th>
           <% if current_user.role == 0 %>
           <th scope="col">
             <%= link_to '<span class="fa fa-plus"></span>'.html_safe, new_area_path  %>
           </th>
           <%else%>
           <th scope="col"></th>
           <%end%>
         </tr>
       </thead>
       <tbody>
          <% @areas.order(number: :asc) %>
          <% @areas.each do |area| %>
           <tr>
              <td><%= link_to area.number, area %>. </td>
              <td><%= link_to area.name, area %></td>
              <td><%= area.user.firstname%> <%= area.user.lastname%></td>
             <td><%= link_to '<span class="fa fa-eye"></span>'.html_safe, area %></td>
             <% if (current_user.role == 0) then %>
              <td><%= link_to '<span class="fa fa-pencil"></span>'.html_safe, edit_area_path(area) %></td>
             <%else%>
              <td></td>
             <%end%>
             <% if current_user.role == 0 %>
              <td><%= link_to '<span class="fa fa-times"></span>'.html_safe, area, method: :delete, data: { confirm: '¿Está seguro que desea eliminar el área de ' + area.name + '?'  } %></td>
             <%else%>
              <td></td>
             <%end%>
           </tr>
         <% end %>
       </tbody>
     </table>
   </div>

   </div>
