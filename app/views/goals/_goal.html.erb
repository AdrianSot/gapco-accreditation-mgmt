<div id = "goal_<%= goal.id %>">
    <%=goal.title%>
      <% if (current_user.role == 0) then %>
        <button data-toggle="modal" class="btn btn-link" data-target="#myupdategoal_<%= goal.id%>">
                <span class="fa fa-pencil"></span>
        </button>
        <%= link_to '<span class="fa fa-times"></span>'.html_safe, goal, method: :delete, remote: true %>
      <%end%>
    <% content = goal.actions.split("\n") %>
    <ol>
        <% content.each do |action| %>
        <li><%=action%></li>
        <%end%>
    </ol>





    <%= form_for(goal, :method => :put, remote: true) do |form| %>
    <div class="modal fade" id="myupdategoal_<%= goal.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Editar</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
          <div class="modal-body">

            <div class="field">
              <% form.label :title %>TÃ­tulo: <br>
              <%= form.text_field :title %>
            </div>

            <div class="field">
              <% form.label :actions %>Acciones: <br>
              <%= form.text_area :actions, class:"form-control" %>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" id="myupdatebutton_<%= goal.id%>" class="btn btn-default" data-dismiss="modal">Salir</button>
            <%= submit_tag "Guardar", class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <%end%>

    </div>
