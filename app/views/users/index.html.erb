<!-- Page content -->
  <div class="w3-container">

    <div class="container-fluid">
        <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1>Usuarios del sistema </h1>
        </div>

  </div>
  </div>

   <div class="container-fluid">
     <table class="table table-hover" style="width: 70%;" align="center">
       <thead>
         <tr>
           <th scope="col">
             Nombres
           </th>
           <th scope="col">
             Apellidos
           </th>
           <th scope="col">
             Correo electrónico
           </th>
           <th scope="col">
             Rol
           </th>
           <th scope="col">
             Áreas asignadas
           </th>
           <th scope="col">
           </th>
           <th scope="col">
           </th>
         </tr>
       </thead>
       <tbody>
         <% @users.each do |user| %>
           <tr>
             <td><%= user.firstname %></td><td><%= user.lastname %></td><td><%= user.email %></td>
             <%if user.role == 0%>
                <td>Coordinador</td>
            <%else%>
                <td>Responsable</td>
            <%end%>

            <%if user.areas.length == 0%>
              <td>Sin áreas asignadas</td>
            <%else%>
                <td>
                <ul style="list-style-type:none;">
                 <% user.areas.each do |area|%>
                 <li><%= link_to area.name, area%></li>
                 <%end%>
                </ul>
              </td>
            <%end%>
           <% if current_user.role == 0 then %>
             <td><%= link_to '<span class="fa fa-pencil"></span>'.html_safe, edit_user_path(user) %></td>
             <td><%= link_to '<span class="fa fa-times"></span>'.html_safe, user, method: :delete, data: { confirm: '¿Está seguro que desea eliminar a '+user.firstname+' '+user.lastname+'?'} %></td>
           <%else%>
             <td></td>
             <td></td>
           <%end%>
           </tr>
         <% end %>
       </tbody>
     </table>
   </div>
   <div class="container-fluid" style="width: 70%;">
     <%= link_to '<button type="button" class="btn btn-outline-secondary">Volver</button>'.html_safe, :back %>
   </div>
   </div>
