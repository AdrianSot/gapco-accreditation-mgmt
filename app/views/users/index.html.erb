<!-- Page content -->
  <div class="w3-container">

    <div class="container-fluid">
        <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1>Usuarios del sistema </h1>
        </div>

  </div>
 
 <div class="w3-container">
   <div class="container-fluid">
     <table class="table table-hover" style="width: 70%;" align="center">
       <thead>
         <tr>
           <th scope="col">
             Nombres
           </th>
           <th scope="col">
             Apellidos
           </th>
           <th scope="col">
             Correo electrónico
           </th>
           <th scope="col">
             Rol
           </th>
           <th scope="col">
             Áreas asignadas
           </th>
           <th scope="col">
           </th>
           <th scope="col">
           </th>
         </tr>
       </thead>
       <tbody>
         <% @users.each do |user| %>
           <tr>
             <td><%= user.firstname %></td><td><%= user.lastname %></td><td><%= user.email %></td>
             <%if user.role == 0%>
                <td>Coordinador</td>
            <%else%>
                <td>Responsable</td>
            <%end%>

            <%if user.areas.length == 0%>
              <td>Sin áreas asignadas</td>
            <%else%>
              <td>
              <select name = "area" onChange="window.location.href=this.value" class='form-control'>
                <option selected="selected" value = <%=index_path%>>Seleccione un área para consultarla</option>
                <%= user.areas.each do |area|%>
                  <option value = <%=area_path(area)%>><%=area.name%> </option>
                <%end%>
              </select>                
              </td>
              
      
            <%end%>

            <td><%= link_to '<span class="fa fa-pencil"></span>'.html_safe, edit_user_path(user) %></td>
            <td><%= link_to '<span class="fa fa-times"></span>'.html_safe, user, method: :delete, data: { confirm: '¿Está seguro que desea eliminar a '+user.firstname+' '+user.lastname+'?'} %></td>
           </tr>
         <% end %>
       </tbody>
     </table>
   </div>
   <div class="container-fluid" style="width: 70%;">
     <%= link_to '<button type="button" class="btn btn-outline-secondary">Volver</button>'.html_safe, root_path %>
   </div>
    
   </div>